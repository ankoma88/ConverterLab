<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/icons"
              android:orientation="horizontal">

    <ImageView
        android:src="@drawable/ic_marker_bank" style="@style/map_marker_image_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_base_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_marker_AM"
            style="@style/map_marker_title_style"/>

        <TextView
            android:id="@+id/snippet_marker_AM"
            style="@style/map_marker_snippet_style"/>
    </LinearLayout>
</LinearLayout>
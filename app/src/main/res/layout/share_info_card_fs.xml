<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_light"
    android:orientation="vertical"
    android:padding="@dimen/activity_base_margin">

    <TextView
        android:id="@+id/tvTraderName_FS"
        android:text="@string/trader_name"
        style="@style/trader_name_share_info_card_style"/>
    <TextView
        android:id="@+id/tvRegion_FS"
        android:text="@string/region"
        style="@style/region_share_info_card_style"/>
    <TextView
        android:id="@+id/tvCity_FS"
        android:text="@string/city"
        style="@style/city_share_info_card_style"/>

</LinearLayout>